<!DOCTYPE html>
<html lang="es">
  <%-include ("../partials/head", {cssSheets: "editShows", title: "Editar Shows"}) %>
  <body>
    <%- include('../partials/header') %>
    <form action="/shows/edit" method="POST" enctype="multipart/form-data">
      <div class="row product-detail" style="background-color:#16324f;">
        <div class="col-12 col-md-6">
          <label for="name" class="form-label">Nombre del shows:</label>
          <input type="text" id="name" name="name" placeholder="Ej: Eva luna" class="form-input">
        </div>
        <div class="col-12 col-md-6">
          <label for="price" class="form-label">Precio del shows:</label>
          <input type="text" id="price" name="price" placeholder="Ej: $500" class="form-input">
        </div>
        <div class="col-12 col-md-6">
          <label for="hour" class="form-label">Hora:</label>
          <input type="text" id="hour" name="hour" placeholder="Ej: 20:00" class="form-input">
        </div>
        <div class="col-12 col-md-6">
          <label for="category" class="form-label">Categoría:</label>
          <select name="category" id="category" class="form-input">
            <option value="">Elegí</option>
            <option value="rock">Rock</option>
            <option value="pop">Pop</option>
          </select>
        </div>
        <div class="col-12">
          <label for="description" class="form-label">Descipción Principal:</label>
          <textarea name="description" id="description" class="form-input"></textarea>
        </div>
        <div class="col-12 col-md-6">
          <label for="video" class="form-label">Link del video:</label>
          <input type="text" id="video" name="video" placeholder="Ej: youtube.com/watch?v=5g2hT4GmAGU" class="form-input">
        </div>
        <div class="col-12">
          <label for="description" class="form-label">Descipción Video:</label>
          <textarea name="description" id="description" class="form-input"></textarea>
        </div>
        
        <div class="col-12 col-md-6">
          <label for="artistImage" class="form-label">Imagen del Artista:</label>
          <input type="file" id="artistImage" name="artistImage">
        </div>
        <div class="col-12">
          <button type="submit" class="buy-now-button">Guardar Shows</button>
        </div>
      </div>
    </form>
    <%- include('../partials/footer') %>
    <!-- Agregando archivo nav.js para el menu -->
    <script src="js/nav/nav.js"></script>