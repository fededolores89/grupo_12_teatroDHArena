<!DOCTYPE html>
<html lang="es">
  <%- include('../partials/head' , {cssSheets: "productDetail", title: "Detalle Show"}) %>

  


<!--***************** detalle del producto ***************-->
  <body>
    <%- include('../partials/header') %>
    <main class="main-carritoDetalle">
      <section class="evento">
        <div class="evento-portada-container">
          <div class="evento-portada">
            <img
              src="/img/Img-Index-Artistas/<%= show.Artist.image%>"
              alt=""
              srcset=""/>
          </div>
        </div>
        <article class="evento-info">
          <div class="evento-info-nombre">
            <!-- <h2>De adentro pa fuera Tour</h2> -->
            <h1 class="evento-titulo"><%= show.name %></h1>
          </div>
          <div class="evento-info-detalle">
            <div class="evento-fecha-contenedor">
              <div class="evento-fecha-detalle">
                <i class="fa-regular fa-calendar"></i>
                <% if (showDate[1] == 1) { %>
                  <span class="evento-fecha-mes">ENE</span>
                <% } else if (showDate[1] == 2) { %>
                  <span class="evento-fecha-mes">FEB</span>
                <% } else if (showDate[1] == 3) { %>
                  <span class="evento-fecha-mes">MAR</span>
                <% } else if(showDate[1] == 4) { %>
                  <span class="evento-fecha-mes">ABR</span>
                <% } else if (showDate[1] == 5) { %>
                  <span class="evento-fecha-mes">MAY</span>
                <% } else if (showDate[1] == 6) { %>
                  <span class="evento-fecha-mes">JUN</span>
                <% } else if (showDate[1] == 7) { %>
                  <span class="evento-fecha-mes">JUL</span>
                <% } else if (showDate[1] == 8) { %>
                  <span class="evento-fecha-mes">AGO</span>
                <% } else if (showDate[1] == 9) { %>
                  <span class="evento-fecha-mes">SEP</span>
                <% } else if (showDate[1] == 10) { %>
                  <span class="evento-fecha-mes">OCT</span>
                <% } else if (showDate[1] == 11) { %>
                  <span class="evento-fecha-mes">NOV</span>
                <% } else if (showDate[1] == 12) { %>
                  <span class="evento-fecha-mes">DIC</span>
                <% } %> 
                <span class="evento-fecha-dia"><%= showDate[2] %></span>
              </div>
            </div>
            <div class="evento-descripcion">
              <p class="evento-descripcion-detalle">
                <%= show.descriptionHeader %> 
              </p>
              <div class="evento-descripcion-horario-contendedor">
                <i class="fa-regular fa-clock"></i>
                <span class="evento-hora"><%= show.hour %>  hrs</span>
              </div>
              <div class="evento-descripcion-tipoPublico-container">
                <i class="fa-solid fa-people-group"></i>
                <span class="evento-tipoPublico">+18 a√±os</span>
              </div>
            </div>
          </div>
          <div class="evento-lista-protocolos">
            <div class="protocolo-contenedor">
              <span class="protocolo-nombre">POLITICAS DE VENTA</span>
            </div>
            <div class="protocolo-contenedor">
              <span class="protocolo-nombre">TERMINOS Y CONDICIONES</span>
            </div>
            <div class="protocolo-contenedor">
              <span class="protocolo-nombre">METODOS DE PAGO</span>
            </div>
          </div>
        </article>
        <article class="evento-artista">
          <h2>Acerca del artista</h2>
          <p class="evento-artista-descripcion">
            <%= show.descriptionVideo %> 
          </p>
          <div class="evento-artista-video">
            <iframe
              width="100%"
              height="415"
              src=<%= show.video %> 
              title="YouTube video player"
              frameborder="0"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen
            ></iframe>
          </div>
        </article>
        <article class="evento-compra-contenedor">
          <i class="fa-solid fa-location-arrow"></i>
          <div class="evento-compra-detalle">
              <div class="form-item">
                <label for="evento-ubicacion">Ubicacion</label>
                <select name="evento-ubicacion" id="evento-ubicacion">
                  <option value="">Seleccione ubicacion</option>
                  <option value="platea" selected>Platea</option>
                </select>
              </div>
              <div class="form-item">
                <label for="evento-precio">Precio</label>
                <span id="evento-precio">$ <%= show.price %> </span>
              </div>
             <a class="evento-buy" href="/shows/<%= show.id %>/agregar" class="evento-compra-submit">Agregar al carrito</a> 
          </div>
        </article>
        <% if (userLogged != undefined && userLogged.userType == 2) { %>
          <div class="evento-admin-contenedor">
            <div class="admin-buttons">
              <a class="edit-button" href="/shows/<%= show.id %>/edit" class=""><i class="fa-solid fa-pen-to-square"></i> Editar</a>
              <form action="/shows/<%= show.id %>?_method=DELETE" method="POST">
                <button class="delete-button" type="submit">
                  <i class="fa-solid fa-trash"></i> Borrar
                </button>
              </form> 
            </div>
          </div>
        <% } %>
      </section>
    </main>
    <%- include('../partials/footer') %>
    <!-- Agregando archivo nav.js para el menu -->
    <script src="../js/nav/nav.js"></script>
  </body>
</html>
